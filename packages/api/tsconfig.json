{
  "extends": "@plobbo/tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "paths": {
      "@plobbo/api/*": ["./src/*"],
      "@plobbo/auth": ["../../packages/auth/src/index.ts"],
      "@plobbo/cache/*": ["../../packages/cache/src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "eslint.config.js", "sst-env.d.ts"]
}
