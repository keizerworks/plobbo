{
    "$schema": "https://ui.shadcn.com/schema.json",
    "rsc": true,
    "tsx": true,
    "style": "new-york",
    "tailwind": {
        "baseColor": "neutral",
        "config": "tailwind.config.ts",
        "css": "src/styles/globals.css",
        "cssVariables": true,
        "prefix": ""
    },
    "aliases": {
        "components": "~/components",
        "utils": "~/lib/utils",
        "ui": "~/components/ui",
